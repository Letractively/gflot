<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:p="urn:import:ca.nanometrics.gflot.client">

  <ui:style>
    .hoverPoint {
    	margin-top: 10px;
    	margin-bottom: 5px;
    }
  </ui:style>

  <ui:with field='res' type='com.googlecode.gflot.examples.client.resources.Resources' />

  <g:HTMLPanel>
    <p:SimplePlot ui:field="plot" width="600px" height="300px" />

    <g:Label ui:field="hoverPoint" addStyleNames='{style.hoverPoint}' />

    <g:Label ui:field="cursorPosition" />
  </g:HTMLPanel>
</ui:UiBinder>